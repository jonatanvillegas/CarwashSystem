@using UI.Services.Clock
@model UI.Models.Caja
@inject IClock Clock
@{
    ViewData["Title"] = "Caja Actual";
}
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">

@section Styles {
    <link href="~/plugins/sweetalert2/sweetalert2.min.css" rel="stylesheet" />
}

<div class="container-fluid py-4">
    <div class="row justify-content-center">
        <div class="col-lg-12">
            <div class="card shadow-lg border-0 rounded-4">
                <div class="card-header bg-gradient bg-primary text-white rounded-top-4 d-flex align-items-center">
                    <i class="bi bi-cash-stack fs-2 me-2"></i>
                    <h3 class="mb-0 fw-bold">Caja Actual</h3>
                </div>
                <div class="card-body">
                    @if (Model == null)
                    {
                        <div class="alert alert-info text-center rounded-3 py-3 mb-4">
                            <i class="bi bi-info-circle fs-3"></i>
                            <div class="mt-2">No hay caja abierta.</div>
                        </div>
                        <div class="d-flex justify-content-center">
                            <button class="btn btn-success btn-lg rounded-pill px-4" id="btnApertura">
                                <i class="bi bi-box-arrow-in-down"></i> Abrir Caja
                            </button>
                        </div>
                    }
                    else
                    {
                        <div class="row g-3 mb-3">
                            <div class="col-md-6">
                                <div class="bg-light rounded-3 p-3 h-100">
                                    <div class="mb-2"><span class="fw-semibold text-secondary">Fecha Apertura:</span></div>
                                    <div class="fs-5">@Clock.ToNi(Model.FechaApertura).ToString("g")</div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="bg-light rounded-3 p-3 h-100">
                                    <div class="mb-2"><span class="fw-semibold text-secondary">Monto Inicial:</span></div>
                                    <div class="fs-5">@Model.MontoInicial.ToString("N")</div>
                                </div>
                            </div>
                        </div>
                        <div class="row g-3 mb-3">
                            <div class="col-md-6">
                                <div class="bg-success bg-opacity-10 rounded-3 p-3 h-100">
                                    <div class="mb-2"><span class="fw-semibold text-success">Total Lavados:</span></div>
                                    <div class="fs-5">@Model.TotalLavados.ToString("N")</div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="bg-warning bg-opacity-10 rounded-3 p-3 h-100">
                                    <div class="mb-2"><span class="fw-semibold text-warning">Total Ventas:</span></div>
                                    <div class="fs-5">@Model.TotalVentas.ToString("N")</div>
                                </div>
                            </div>
                        </div>
                        <div class="mb-4 text-center">
                            <span class="fw-bold fs-4 text-primary">Total Ingresos:</span>
                            <span class="fw-bold fs-4 text-success ms-2">@((Model.MontoInicial + Model.TotalIngresos)?.ToString("C"))</span>
                        </div>
                        <div class="d-flex justify-content-center gap-3 mb-3">
                            <button class="btn btn-danger btn-lg rounded-pill px-4" id="btnCierre">
                                <i class="bi bi-box-arrow-right"></i> Cerrar Caja
                            </button>
                        </div>
                        <hr />
                        <div id="movimientosCaja"></div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Modal para apertura/cierre -->
<div class="modal fade" id="modalCaja" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content rounded-4 shadow">
            <div class="modal-header bg-primary text-white rounded-top-4">
                <h5 class="modal-title" id="modalCajaLabel"></h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body" id="modalCajaBody"></div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/plugins/sweetalert2/sweetalert2.min.js"></script>
    <script>
        // Abrir caja
        $('#btnApertura').click(function () {
            $.get('@Url.Action("Apertura")', function (html) {
                $('#modalCajaBody').html(html);
                $('#modalCajaLabel').text('Apertura de Caja');
                var modal = new bootstrap.Modal(document.getElementById('modalCaja'));
                modal.show();
            });
        });

        // Cerrar caja (mostrando monto esperado)
        $('#btnCierre').click(function () {
            $.get('@Url.Action("MontoSugeridoCierre")', function (info) {
                if (!info.success) {
                    Swal.fire('Error', info.message, 'error');
                    return;
                }

                const montoEsperado = Number(info.montoEsperado || 0);

                Swal.fire({
                    title: 'Cerrar caja',
                    html: `Monto esperado para cerrar: <strong>${montoEsperado.toLocaleString(undefined, { style: 'currency', currency: 'USD' })}</strong>`,
                    input: 'number',
                    inputLabel: 'Monto final contado',
                    inputAttributes: { min: 0, step: 0.01 },
                    showCancelButton: true,
                    confirmButtonText: 'Cerrar',
                    cancelButtonText: 'Cancelar'
                }).then((result) => {
                    if (result.isConfirmed && result.value) {
                        $.post('@Url.Action("Cierre")', { montoCierre: result.value }, function (r) {
                            if (r.success) location.reload();
                            else Swal.fire('Error', r.message, 'error');
                        });
                    }
                });
            });
        });

        // Cargar movimientos
        @if (Model != null)
        {
                    <text>
                    $(function () {
                        $('#movimientosCaja').load('@Url.Action("Movimientos")');
                    });
                    </text>
        }
    </script>
}