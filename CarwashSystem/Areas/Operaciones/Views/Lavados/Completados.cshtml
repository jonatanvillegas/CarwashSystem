@model IEnumerable<UI.Models.Lavados_View>
@{
    ViewData["Title"] = "Lavados Completados Hoy";
}
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">

<div class="container py-4">
    <h2 class="fw-bold text-success mb-4"><i class="bi bi-check-circle"></i> Lavados Completados Hoy</h2>
    <div class="row">
        @foreach (var l in Model)
        {
            <div class="col-md-6 col-lg-4 mb-4">
                <div class="card shadow-sm border-0 rounded-4 h-100">
                    <div class="card-body">
                        <h5 class="card-title text-success">
                            <i class="bi bi-car-front"></i> @l.Placa
                        </h5>
                        <p class="mb-1"><b>Tipo:</b> @l.TipoVehiculo</p>
                        <p class="mb-1"><b>Marca:</b> @l.Marca</p>
                        <p class="mb-1"><b>Modelo:</b> @l.Modelo</p>
                        <p class="mb-1"><b>Total:</b> @l.Total.ToString("C")</p>
                        <span class="badge rounded-pill bg-success">
                            <i class="bi bi-check-circle"></i> Completado
                        </span>
                    </div>
                    <div class="card-footer bg-white border-0 d-flex gap-2 justify-content-end">
                        <a class="btn btn-outline-success btn-sm rounded-pill" href="@Url.Action("Detalle", "Lavados", new { area = "Operaciones", id = l.Id })">
                            <i class="bi bi-eye"></i> Ver Detalle
                        </a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>