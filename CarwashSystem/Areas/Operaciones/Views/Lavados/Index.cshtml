@model IEnumerable<UI.Models.Lavados_View>
@{
    ViewData["Title"] = "Lavados Pendientes";

    bool cajaAbierta = ViewBag.CajaAbierta;
}
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">

<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold text-info"><i class="bi bi-droplet"></i> Lavados Pendientes</h2>
        <button class="btn btn-info rounded-pill shadow " @(cajaAbierta ? "" : "disabled") id="btnNuevo">
            <i class="bi bi-plus-circle"></i> Nuevo Lavado
        </button>
    </div>
    <div class="row">
        @foreach (var l in Model)
        {
            <div class="col-md-6 col-lg-4 mb-4">
                <div class="card shadow-sm border-0 rounded-4 h-100">
                    <div class="card-body">
                        <h5 class="card-title text-info">
                            <i class="bi bi-car-front"></i> @l.Placa
                        </h5>
                        <p class="mb-1"><b>Tipo:</b> @l.TipoVehiculo</p>
                        <p class="mb-1"><b>Marca:</b> @l.Marca</p>
                        <p class="mb-1"><b>Modelo:</b> @l.Modelo</p>
                        <span class="badge rounded-pill bg-warning text-dark">
                            <i class="bi bi-hourglass-split"></i> Pendiente
                        </span>
                    </div>
                    <div class="card-footer bg-white border-0 d-flex gap-2 justify-content-end">
                        <button class="btn btn-outline-info btn-sm rounded-pill" @(cajaAbierta ? "" : "disabled") onclick="location.href='@Url.Action("Detalle", "Lavados", new { area = "Operaciones", id = l.Id })'">
                            <i class="bi bi-eye"></i> Detalle
                        </button>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<!-- Modal para crear/editar -->
<div class="modal fade" id="modalLavado" tabindex="-1" aria-labelledby="modalLavadoLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content rounded-4 shadow">
            <div class="modal-header bg-info text-white rounded-top-4">
                <h5 class="modal-title" id="modalLavadoLabel"><i class="bi bi-droplet"></i> Lavado</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body" id="modalLavadoBody">
                <!-- Aquí se carga el formulario por AJAX -->
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
    <script>
        // Nuevo
        $('#btnNuevo').click(function () {
            $.get('@Url.Action("Create")', function (html) {
                $('#modalLavadoBody').html(html);
                $('#modalLavadoLabel').text('Nuevo Lavado');
                var modal = new bootstrap.Modal(document.getElementById('modalLavado'));
                modal.show();
            });
        });

        // Detalle
        $('.btnDetalle').click(function () {
            var id = $(this).data('id');
            $.get('@Url.Action("Detalle")', { id: id }, function (html) {
                $('#modalLavadoBody').html(html);
                $('#modalLavadoLabel').text('Detalle Lavado');
                var modal = new bootstrap.Modal(document.getElementById('modalLavado'));
                modal.show();
            });
        });
    </script>
}