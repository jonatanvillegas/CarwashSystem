@model IEnumerable<UI.Models.Modelos>
@{
    ViewData["Title"] = "Catálogo de Modelos";
}

<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold text-secondary"><i class="bi bi-car-front"></i> Catálogo de Modelos</h2>
        <button class="btn btn-secondary rounded-pill shadow" id="btnNuevo">
            <i class="bi bi-plus-circle"></i> Nuevo Modelo
        </button>
    </div>
    <div class="row">
        @foreach (var m in Model)
        {
            <div class="col-md-6 col-lg-4 mb-4">
                <div class="card shadow-sm border-0 rounded-4 h-100">
                    <div class="card-body">
                        <h5 class="card-title text-secondary">
                            <i class="bi bi-car-front"></i> @m.Nombre
                        </h5>
                        <p class="mb-1"><b>Marca:</b> @m.Marca?.Nombre</p>
                        <span class="badge rounded-pill @(m.Activo ? "bg-success" : "bg-secondary")">
                            <i class="bi @(m.Activo ? "bi-check-circle" : "bi-x-circle")"></i>
                            @(m.Activo ? "Activo" : "Inactivo")
                        </span>
                    </div>
                    <div class="card-footer bg-white border-0 d-flex gap-2 justify-content-end">
                        <button class="btn btn-outline-secondary btn-sm rounded-pill btnEditar" data-id="@m.Id">
                            <i class="bi bi-pencil-square"></i> Editar
                        </button>
                        <button class="btn btn-outline-danger btn-sm rounded-pill btnDesactivar" data-id="@m.Id" @(m.Activo ? "" : "disabled")>
                            <i class="bi bi-slash-circle"></i> Desactivar
                        </button>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<!-- Modal para crear/editar -->
<div class="modal fade" id="modalModelo" tabindex="-1" aria-labelledby="modalModeloLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content rounded-4 shadow">
            <div class="modal-header bg-secondary text-white rounded-top-4">
                <h5 class="modal-title" id="modalModeloLabel"><i class="bi bi-car-front"></i> Modelo</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body" id="modalModeloBody">
                <!-- Aquí se carga el formulario por AJAX -->
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
    <script>
        // Nuevo
        $('#btnNuevo').click(function () {
            $.get('@Url.Action("Create")', function (html) {
                $('#modalModeloBody').html(html);
                $('#modalModeloLabel').text('Nuevo Modelo');
                var modal = new bootstrap.Modal(document.getElementById('modalModelo'));
                modal.show();
            });
        });

        // Editar
        $('.btnEditar').click(function () {
            var id = $(this).data('id');
            $.get('@Url.Action("Edit")/' + id, function (html) {
                $('#modalModeloBody').html(html);
                $('#modalModeloLabel').text('Editar Modelo');
                var modal = new bootstrap.Modal(document.getElementById('modalModelo'));
                modal.show();
            });
        });

        // Guardar (AJAX)
        $(document).on('submit', '#formModelo', function (e) {
            e.preventDefault();
            var form = $(this);
            var url = form.attr('action');
            $.post(url, form.serialize(), function (result) {
                if (result.success) {
                    location.reload();
                } else {
                    $('#modalModeloBody').html(result);
                }
            });
        });

        // Desactivar (AJAX)
        $('.btnDesactivar').click(function () {
            var id = $(this).data('id');
            if (confirm('¿Desactivar este modelo?')) {
                $.post('@Url.Action("Desactivar")', { id: id }, function (result) {
                    if (result.success) location.reload();
                });
            }
        });
    </script>
}