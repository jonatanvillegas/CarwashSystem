@model UI.Models.Modelos

<form id="formModelo" method="post" action="@(Model.Id == 0 ? Url.Action("Create") : Url.Action("Edit"))">
    @Html.AntiForgeryToken()
    @if (Model.Id != 0)
    {
        <input type="hidden" name="Id" value="@Model.Id" />
    }
    <div class="mb-3">
        <label for="MarcaId" class="form-label fw-semibold">
            <i class="bi bi-tag"></i> Marca
        </label>
        <select class="form-control rounded-pill" id="MarcaId" name="MarcaId" required>
            <option value="">Seleccione...</option>
            @foreach (var m in ViewBag.Marcas as List<UI.Models.Marcas>)
            {
                if (Model.MarcaId == m.Id)
                {
                    <option value="@m.Id" selected="selected">@m.Nombre</option>
                }
                else
                {
                    <option value="@m.Id">@m.Nombre</option>
                }
            }
        </select>
    </div>
    <div class="mb-3">
        <label for="Nombre" class="form-label fw-semibold">
            <i class="bi bi-car-front"></i> Nombre del Modelo
        </label>
        <input type="text" class="form-control rounded-pill" id="Nombre" name="Nombre" value="@Model.Nombre" required maxlength="100" />
    </div>
    <div class="d-flex justify-content-end gap-2">
        <button type="submit" class="btn btn-secondary rounded-pill shadow">
            <i class="bi bi-save"></i> Guardar
        </button>
        <button type="button" class="btn btn-secondary rounded-pill" data-bs-dismiss="modal">
            <i class="bi bi-x-circle"></i> Cancelar
        </button>
    </div>
</form>