@model IEnumerable<UI.Models.Productos>
@{
    ViewData["Title"] = "Catálogo de Productos";
}
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">

<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold text-warning"><i class="bi bi-basket"></i> Catálogo de Productos</h2>
        <button class="btn btn-warning rounded-pill shadow" id="btnNuevo">
            <i class="bi bi-plus-circle"></i> Nuevo Producto
        </button>
    </div>
    <div class="row">
        @foreach (var p in Model)
        {
            <div class="col-md-6 col-lg-4 mb-4">
                <div class="card shadow-sm border-0 rounded-4 h-100">
                    <div class="card-body">
                        <h5 class="card-title text-warning">
                            <i class="bi bi-basket"></i> @p.Nombre
                        </h5>
                        <p class="card-text text-muted mb-1">
                            <i class="bi bi-currency-dollar"></i> <b>@p.Precio.ToString("C")</b>
                        </p>
                        <span class="badge rounded-pill @(p.Activo ? "bg-success" : "bg-secondary")">
                            <i class="bi @(p.Activo ? "bi-check-circle" : "bi-x-circle")"></i>
                            @(p.Activo ? "Activo" : "Inactivo")
                        </span>
                    </div>
                    <div class="card-footer bg-white border-0 d-flex gap-2 justify-content-end">
                        <button class="btn btn-outline-warning btn-sm rounded-pill btnEditar" data-id="@p.Id">
                            <i class="bi bi-pencil-square"></i> Editar
                        </button>
                        <button class="btn btn-outline-danger btn-sm rounded-pill btnDesactivar" data-id="@p.Id" @(p.Activo ? "" : "disabled")>
                            <i class="bi bi-slash-circle"></i> Desactivar
                        </button>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<!-- Modal para crear/editar -->
<div class="modal fade" id="modalProducto" tabindex="-1" aria-labelledby="modalProductoLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content rounded-4 shadow">
            <div class="modal-header bg-warning text-dark rounded-top-4">
                <h5 class="modal-title" id="modalProductoLabel"><i class="bi bi-basket"></i> Producto</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body" id="modalProductoBody">
                <!-- Aquí se carga el formulario por AJAX -->
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
    <script>
        // Nuevo
        $('#btnNuevo').click(function () {
            $.get('@Url.Action("Create")', function (html) {
                $('#modalProductoBody').html(html);
                $('#modalProductoLabel').text('Nuevo Producto');
                var modal = new bootstrap.Modal(document.getElementById('modalProducto'));
                modal.show();
            });
        });

        // Editar
        $('.btnEditar').click(function () {
            var id = $(this).data('id');
            $.get('@Url.Action("Edit")/' + id, function (html) {
                $('#modalProductoBody').html(html);
                $('#modalProductoLabel').text('Editar Producto');
                var modal = new bootstrap.Modal(document.getElementById('modalProducto'));
                modal.show();
            });
        });

        // Guardar (AJAX)
        $(document).on('submit', '#formProducto', function (e) {
            e.preventDefault();
            var form = $(this);
            var url = form.attr('action');
            $.post(url, form.serialize(), function (result) {
                if (result.success) {
                    location.reload();
                } else {
                    $('#modalProductoBody').html(result);
                }
            });
        });

        // Desactivar (AJAX)
        $('.btnDesactivar').click(function () {
            var id = $(this).data('id');
            if (confirm('¿Desactivar este producto?')) {
                $.post('@Url.Action("Desactivar")', { id: id }, function (result) {
                    if (result.success) location.reload();
                });
            }
        });
    </script>
}