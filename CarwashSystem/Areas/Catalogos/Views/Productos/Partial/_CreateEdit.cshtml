@model UI.Models.Productos

<form id="formProducto" method="post" action="@(Model.Id == 0 ? Url.Action("Create") : Url.Action("Edit"))">
    @Html.AntiForgeryToken()
    @if (Model.Id != 0)
    {
        <input type="hidden" name="Id" value="@Model.Id" />
    }
    <div class="mb-3">
        <label for="Nombre" class="form-label fw-semibold">
            <i class="bi bi-basket"></i> Nombre
        </label>
        <input type="text" class="form-control rounded-pill" id="Nombre" name="Nombre" value="@Model.Nombre" required maxlength="100" />
    </div>
    <div class="mb-3">
        <label for="Precio" class="form-label fw-semibold">
            <i class="bi bi-currency-dollar"></i> Precio
        </label>
        <input type="number" class="form-control rounded-pill" id="Precio" name="Precio" value="@Model.Precio" required min="0" step="0.01" />
    </div>
    <div class="d-flex justify-content-end gap-2">
        <button type="submit" class="btn btn-warning rounded-pill shadow">
            <i class="bi bi-save"></i> Guardar
        </button>
        <button type="button" class="btn btn-secondary rounded-pill" data-bs-dismiss="modal">
            <i class="bi bi-x-circle"></i> Cancelar
        </button>
    </div>
</form>