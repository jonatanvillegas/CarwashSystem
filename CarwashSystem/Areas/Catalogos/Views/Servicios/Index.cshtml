@model IEnumerable<UI.Models.Servicios>
@{
    ViewData["Title"] = "Catálogo de Servicios";
}

<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold text-success"><i class="bi bi-bucket"></i> Catálogo de Servicios</h2>
        <button class="btn btn-success rounded-pill shadow" id="btnNuevo">
            <i class="bi bi-plus-circle"></i> Nuevo Servicio
        </button>
    </div>
    <div class="row">
        @foreach (var s in Model)
        {
            <div class="col-md-6 col-lg-4 mb-4">
                <div class="card shadow-sm border-0 rounded-4 h-100">
                    <div class="card-body">
                        <h5 class="card-title text-primary">
                            <i class="bi bi-gear-wide-connected"></i> @s.Nombre
                        </h5>
                        <p class="card-text text-muted">@s.Descripcion</p>
                        <span class="badge rounded-pill @(s.Activo ? "bg-success" : "bg-secondary")">
                            <i class="bi @(s.Activo ? "bi-check-circle" : "bi-x-circle")"></i>
                            @(s.Activo ? "Activo" : "Inactivo")
                        </span>
                    </div>
                    <div class="card-footer bg-white border-0 d-flex gap-2 justify-content-end">
                        <button class="btn btn-outline-primary btn-sm rounded-pill btnEditar" data-id="@s.Id">
                            <i class="bi bi-pencil-square"></i> Editar
                        </button>
                        <button class="btn btn-outline-danger btn-sm rounded-pill btnDesactivar" data-id="@s.Id" @(s.Activo ? "" : "disabled")>
                            <i class="bi bi-slash-circle"></i> Desactivar
                        </button>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<!-- Modal para crear/editar -->
<div class="modal fade" id="modalServicio" tabindex="-1" aria-labelledby="modalServicioLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content rounded-4 shadow">
            <div class="modal-header bg-success text-white rounded-top-4">
                <h5 class="modal-title" id="modalServicioLabel"><i class="bi bi-bucket"></i> Servicio</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body" id="modalServicioBody">
                <!-- Aquí se carga el formulario por AJAX -->
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function(){
            // Nuevo
            $('#btnNuevo').click(function () {
                $.get('@Url.Action("Create")', function (html) {
                    $('#modalServicioBody').html(html);
                    $('#modalServicioLabel').text('Nuevo Servicio');
                    var modal = new bootstrap.Modal(document.getElementById('modalServicio'));
                    modal.show();
                });
            });

            // Editar
            $('.btnEditar').click(function () {
                var id = $(this).data('id');
                $.get('@Url.Action("Edit")/' + id, function (html) {
                    $('#modalServicioBody').html(html);
                    $('#modalServicioLabel').text('Editar Servicio');
                    var modal = new bootstrap.Modal(document.getElementById('modalServicio'));
                    modal.show();
                });
            });

            // Guardar (AJAX)
            $(document).on('submit', '#formServicio', function (e) {
                e.preventDefault();
                var form = $(this);
                var url = form.attr('action');
                console.log(url)
                $.post(url, form.serialize(), function (result) {
                    if (result.success) {
                        location.reload();
                    } else {
                        $('#modalServicioBody').html(result);
                    }
                });
            });

            // Desactivar (AJAX)
            $('.btnDesactivar').click(function () {
                var id = $(this).data('id');
                if (confirm('¿Desactivar este servicio?')) {
                    $.post('@Url.Action("Desactivar")', { id: id }, function (result) {
                        if (result.success) location.reload();
                    });
                }
            });
        })
    </script>
}