@model UI.Models.Marcas

<form id="formMarca" method="post" action="@(Model.Id == 0 ? Url.Action("Create") : Url.Action("Edit"))">
    @Html.AntiForgeryToken()
    @if (Model.Id != 0)
    {
        <input type="hidden" name="Id" value="@Model.Id" />
    }
    <div class="mb-3">
        <label for="TipoVehiculoId" class="form-label fw-semibold">
            <i class="bi bi-truck"></i> Tipo de Vehículo
        </label>
        <select class="form-control rounded-pill" id="TipoVehiculoId" name="TipoVehiculoId" required>
            <option value="">Seleccione...</option>
            @foreach (var t in ViewBag.TiposVehiculo as List<UI.Models.TiposVehiculo>)
            {
                <option value="@t.Id" selected="@(Model.TipoVehiculoId == t.Id ? "selected" : null)">@t.Nombre</option>
            }
        </select>
    </div>
    <div class="mb-3">
        <label for="Nombre" class="form-label fw-semibold">
            <i class="bi bi-tag"></i> Nombre
        </label>
        <input type="text" class="form-control rounded-pill" id="Nombre" name="Nombre" value="@Model.Nombre" required maxlength="100" />
    </div>
    <div class="d-flex justify-content-end gap-2">
        <button type="submit" class="btn btn-primary rounded-pill shadow">
            <i class="bi bi-save"></i> Guardar
        </button>
        <button type="button" class="btn btn-secondary rounded-pill" data-bs-dismiss="modal">
            <i class="bi bi-x-circle"></i> Cancelar
        </button>
    </div>
</form>